<p id="notice"><%= notice %></p>

<h1 class="title">Genres</h1>
<%= link_to 'Picture', admin_pictures_path, class:"another" %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Edit', edit_admin_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', [:admin, genre], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_admin_genre_path, class:"new-create" %>
